{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://decentralized-did.github.io/schemas/fingerprint-input-v1.0.schema.json",
  "title": "Fingerprint Input Payload",
  "description": "Schema for fingerprint biometric input data used in enrollment and verification",
  "type": "object",
  "required": [
    "version",
    "fingers"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for input format compatibility"
    },
    "fingers": {
      "type": "array",
      "description": "Array of fingerprint templates (one per finger)",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "$ref": "#/$defs/fingerprintTemplate"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional capture metadata",
      "properties": {
        "captureDate": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of biometric capture"
        },
        "deviceId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Identifier for the capture device"
        },
        "resolution": {
          "type": "integer",
          "minimum": 300,
          "maximum": 1000,
          "description": "Image resolution in DPI"
        }
      }
    }
  },
  "$defs": {
    "fingerprintTemplate": {
      "type": "object",
      "required": [
        "finger_id",
        "minutiae"
      ],
      "additionalProperties": false,
      "properties": {
        "finger_id": {
          "type": "string",
          "description": "Finger identifier (e.g., left_thumb, right_index)",
          "enum": [
            "left_thumb",
            "left_index",
            "left_middle",
            "left_ring",
            "left_pinky",
            "right_thumb",
            "right_index",
            "right_middle",
            "right_ring",
            "right_pinky"
          ]
        },
        "minutiae": {
          "type": "array",
          "description": "Array of minutiae points extracted from fingerprint",
          "minItems": 10,
          "maxItems": 150,
          "items": {
            "$ref": "#/$defs/minutiaPoint"
          }
        },
        "quality": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 100.0,
          "description": "Quality score (0-100, higher is better)"
        },
        "imageWidth": {
          "type": "integer",
          "minimum": 100,
          "maximum": 5000,
          "description": "Original image width in pixels"
        },
        "imageHeight": {
          "type": "integer",
          "minimum": 100,
          "maximum": 5000,
          "description": "Original image height in pixels"
        }
      }
    },
    "minutiaPoint": {
      "type": "object",
      "required": [
        "x",
        "y",
        "angle",
        "type"
      ],
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate in micrometers (μm)",
          "minimum": 0,
          "maximum": 50000
        },
        "y": {
          "type": "number",
          "description": "Y coordinate in micrometers (μm)",
          "minimum": 0,
          "maximum": 50000
        },
        "angle": {
          "type": "number",
          "description": "Ridge angle in degrees (0-359)",
          "minimum": 0,
          "maximum": 359.999
        },
        "type": {
          "type": "string",
          "description": "Minutia type",
          "enum": [
            "ending",
            "bifurcation"
          ]
        },
        "quality": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Individual minutia quality (0.0-1.0)"
        }
      }
    }
  }
}
