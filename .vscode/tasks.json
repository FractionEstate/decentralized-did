{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server - Biovera Wallet",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/demo-wallet"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*webpack.*",
          "endsPattern": "^.*compiled successfully.*"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build:local"
      ],
      "options": {
        "cwd": "${workspaceFolder}/demo-wallet"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}
